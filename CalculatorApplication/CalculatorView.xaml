<Window  x:Class="CalculatorApplication.CalculatorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:VM="clr-namespace:WpfCalculatorApplication"
        Title="Calculator" Height="320" Width="225"
        ResizeMode="CanMinimize" Background="LightGray" 
        Icon="calculator.ico"
        PreviewTextInput="PreviewTextInputHandler">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0">
            <MenuItem Header="View"/>
            <MenuItem Header="Edit"/>
            <MenuItem Header="Help"/>
        </Menu>
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Row="0" Grid.ColumnSpan="5" BorderBrush="Black" BorderThickness="1">
                <Grid Background="AliceBlue">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="Tracker" Grid.Row="0" FontSize="13" TextAlignment="Right" Text="{Binding CalcRibbon}"/>
                    <TextBlock x:Name="ResultTextBox" Grid.Row="1" FontSize="18" TextAlignment="Right" Text="{Binding Result}"/>
                </Grid>
            </Border>
            <Button Height="20" Width="28" Grid.Row="2" Grid.Column="0" Command="{Binding KeyButtonPressedCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}" Content="1"/>
            <Button Height="20" Width="28" Grid.Row="2" Grid.Column="1" Command="{Binding KeyButtonPressedCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}" Content="2"/>
            <Button Height="20" Width="28" Grid.Row="2" Grid.Column="2" Command="{Binding KeyButtonPressedCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}" Content="3"/>
            <Button Height="20" Width="28" Grid.Row="3" Grid.Column="0" Command="{Binding KeyButtonPressedCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}" Content="4"/>
            <Button Height="20" Width="28" Grid.Row="3" Grid.Column="1" Command="{Binding KeyButtonPressedCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}" Content="5"/>
            <Button Height="20" Width="28" Grid.Row="3" Grid.Column="2" Command="{Binding KeyButtonPressedCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}" Content="6"/>
            <Button Height="20" Width="28" Grid.Row="4" Grid.Column="0" Command="{Binding KeyButtonPressedCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}" Content="7"/>
            <Button Height="20" Width="28" Grid.Row="4" Grid.Column="1" Command="{Binding KeyButtonPressedCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}" Content="8"/>
            <Button Height="20" Width="28" Grid.Row="4" Grid.Column="2" Command="{Binding KeyButtonPressedCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}" Content="9"/>
            <Button Height="20" Width="67" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Command="{Binding KeyButtonPressedCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}" Content="0"/>
            <Button Height="20" Width="28" Grid.Row="5" Grid.Column="2" Content="."/>

            <Button x:Name="BackButton" Height="20" Width="28" Grid.Row="1" Grid.Column="0" Command="{Binding BackButtonCommand}" HorizontalContentAlignment="Center" VerticalContentAlignment="Stretch"/>
            <Button x:Name="ClearEntryButton" Height="20" Width="28" Grid.Row="1" Grid.Column="1" Content="CE" Command="{Binding ClearEntryButtonCommand}" HorizontalContentAlignment="Center" VerticalContentAlignment="Stretch"/>
            <Button x:Name="ClearButton" Height="20" Width="28" Grid.Row="1" Grid.Column="2" Content="C" Command="{Binding ClearButtonCommand}" HorizontalContentAlignment="Center" VerticalContentAlignment="Stretch" />
            <Button x:Name="PlusOrMinusButton" Height="20" Width="28" Grid.Row="1" Grid.Column="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Stretch"/>
            <Button x:Name="DivisionButton" Height="20" Width="28" Grid.Row="2" Grid.Column="3" Content="/" HorizontalContentAlignment="Center" 
                    VerticalContentAlignment="Stretch" Command="{Binding KeyButtonPressedCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
            <Button x:Name="MultiplyButton" Height="20" Width="28" Grid.Row="3" Grid.Column="3" Content="*" HorizontalContentAlignment="Center" 
                    VerticalContentAlignment="Stretch" Command="{Binding KeyButtonPressedCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
            <Button x:Name="SubtractionButton" Height="20" Width="28" Grid.Row="4" Grid.Column="3" Content="-" HorizontalContentAlignment="Center" 
                    VerticalContentAlignment="Stretch" Command="{Binding KeyButtonPressedCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
            <Button x:Name="AdditionButton" Height="20" Width="28" Grid.Row="5" Grid.Column="3" Content="+" HorizontalContentAlignment="Center" 
                    VerticalContentAlignment="Stretch" Command="{Binding KeyButtonPressedCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
            <Button x:Name="SquareRootButton" Height="20" Width="28" Grid.Row="1" Grid.Column="4" HorizontalContentAlignment="Center" 
                    VerticalContentAlignment="Stretch" Command="{Binding KeyButtonPressedCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
            <Button x:Name="PercentageButton" Height="20" Width="28" Grid.Row="2" Grid.Column="4" Content="%" HorizontalContentAlignment="Center" 
                    VerticalContentAlignment="Stretch" Command="{Binding KeyButtonPressedCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
            <Button x:Name="InverseButton" Height="20" Width="28" Grid.Row="3" Grid.Column="4" Content="1/x" HorizontalContentAlignment="Center" 
                    VerticalContentAlignment="Stretch" Command="{Binding KeyButtonPressedCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
            <Button x:Name="EqualsButton" Height="56" Width="28" Grid.Row="4" Grid.Column="4" Grid.RowSpan="2" Content="=" HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center" Command="{Binding KeyButtonPressedCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
        </Grid>
    </Grid>
</Window>
